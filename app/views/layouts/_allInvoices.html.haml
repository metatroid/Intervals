  .controls
    = link_to "<span class='icon'>+</span> Add New".html_safe, "#", :class => "newInvoiceFromAll", "data-project_id" => p.id.to_s, "data-user_id" => @user.id.to_s
  .projectName
    = p.name.blank? ? "Project Name" : p.name
  %ul.invoices
    - p.invoices.each do |i|
      %li{:class => "invoice-#{i.id.to_s}"}
